package recursion;

import java.util.Scanner;

public class sumdigit {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt();
        int result = sum(n);
        System.out.println(result);
    }
    public static int sum(int n){
        if (n == 0) {
            return 0;
        }
        return n%10+sum(n/10);


}}
